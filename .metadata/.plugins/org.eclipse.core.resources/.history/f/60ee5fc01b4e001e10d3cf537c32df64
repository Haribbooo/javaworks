package scores;

import java.util.Scanner;

public class CalcSocoreTest {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		boolean sw = true; // 상태변수
		
		while(sw) {
			System.out.println("=====================================================");
			System.out.println("1.학생 수 | 2.점 수 |  3.점수리스트 |  4.분석  | 5. 종료"    );
			System.out.println("=====================================================");
			
			//문자를 숫자로 변환 (String, Integer -->int )
			int menu = Integer.parseInt(sc.nextLine());
			
			if(menu == 1) {
				System.out.println(" 학 생 수: ");
			}else if (menu ==2) {
				System.out.println(" 점 수 : ");
			}else if (menu ==3) {
				System.out.println(" 점 수 리스트 ");
			}else if (menu ==4) {
				System.out.println(" 분   석 ");
			}else if (menu ==5) {
				sw = false;
			}else {
				System.out.println("지원하지 않는 기능 입니다.");
			}
			
			
			
			
		}//while 긑
		System.out.println(" 프로그램 종료 ");
		sc.close();
	}//main

}//class
