package transport;

//자료형
public class Person {
	//필드 
	String name; //이름
	int money; // 가진돈
	
	public Person(String name, int money) {
		this.name= name;
		this.money= money;
	}
	
	//버스를 탄다
	public void takeBus(Bus bus) {
		bus.take(1500);
		this.money-= 1500; // 가지고 있는 돈에서 버스 요금1500원 만큼 차감
	}
	
	//사람의 정보
	public void showPersonInfo() {
		System.out.println(name + "의 남은 돈은"+
							money + "원 입니다.");
	}
}
